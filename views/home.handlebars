<link rel="stylesheet" href="/public/style.css">

<body class="corpo">
  <div class="container mb-5">
      <h1 class="mb-5 mt-5">Cadastro de Produtos</h1>
      <form action="prod/insertprod" method="POST" class="inputs">
          <div class="form-control">
              <input type="hidden" name="id" id="id">
              <label for="nome">Nome:</label>
              <input type="text" name="nome" placeholder="Digite o nome do produto..." class="inputs2">
          </div>
          <div class="form-control mt-3">
              <label for="quantidade">Quantidade:</label>
              <input type="number" name="quantidade" placeholder="Digite a quantidade em estoque..." class="inputs2">
          </div>
          <input type="submit" value="Cadastrar" class="mt-3">
      </form>
  </div>
</body>

    